<div class="row dashboard-page">
  <div class="small-12 medium-9 large-9 small-centered columns">

<% if @today.length > 0 %>

  <div class="session-count text-right">
    <span class="label"><%= @today.length %> sessions scheduled</span>
  </div>

    <!-- Show All schedules -->
    <section class="scheduled-sessions">
    <% @today.each do |data| %>
      <div class="each <%= data.status %>">
        <figure style="background-image: url('<%= data.picture %>')"></figure>
        <div class="details">
          <span class="name"><%= data.name %></span>
          <span class="timeago"><%= time_ago_in_words(data.created_at) %> ago</span>
          <span class="status"><%= data.status %></span>
        </div>
        <div class="clear"></div>
      </div>
    <% end %>
    </section>

<% else %>

  <div class="session-count text-center">
    <span class="label secondary">No sessions have been scheduled today <i class="fa fa-smile-o"></i></span>
  </div>

<% end %>

  </div>
</div>